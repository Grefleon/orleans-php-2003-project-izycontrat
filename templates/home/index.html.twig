{% extends '_layout.html.twig' %}

{% block title %}Izy Contrat - Accueil{% endblock %}

{% block body %}
    <section class="homeTop d-flex justify-content-center">
        <img src="images/homeImg.jpg">
        <div class="homeTxt d-flex flex-column justify-content-around align-items-center align-self-center">
            <h1>Izy Contrat</h1>
            <p>Donnez vie à vos idées avec un accompagnement personnalisé et adapté à vos envies pour la création de votre entreprise.</p>
            <button class="btn-primary btnHome">Je crée mon entreprise !</button>
        </div>
    </section>

    {% if partners is not empty %}
    <section class="partners">
        <h2>Nos partenaires</h2>
        {% for partner in partners %}
            <div class="partner">
                {% if partner.link is not empty %}
                    <a href="{{ partner.link }}">
                        <img src="{{ partner.picture }}" alt="Image {{ partner.name }}">
                    </a>
                {% else %}
                    <img src="{{ partner.picture }}" alt="Image {{ partner.name }}">
                {% endif %}
                <p>{{ partner.name }}</p>
            </div>
        {% endfor %}
    </section>
    {% endif %}
{% endblock %}
