{% extends '_layout.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-1">
            </div>
            <div class="col-10">
                <section class="article">
                    {% for category, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ category }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <h2 class="mb-5">Articles</h2>

                    {% for article in articles %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <h3 class="card-title">{{ article.title }}</h3>
                                {% if article.text|length > 300 %}
                                    <p class="card-text">{{ article.text|slice(0, 250)|raw }}...</p>
                                {% else %}
                                    <p class="card-text">{{ article.text }}</p>
                                {% endif %}
                                <div class="container">
                                    <div class="row">
                                        <div class="col-10">
                                            <p class="sign">Le {{ article.createdAt|date("d/m/Y") }} Ã©crit par <span
                                            class="gold">{{ article.createdBy.email is defined ? article.createdBy.email }}</span>
                                            </p>
                                        </div>
                                        <div class="col-1">
                                                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary mx-2"><i
                                                            class="fas fa-pen"></i></a>
                                        </div>
                                        <div class="col-1">
                                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary mx-2"><i
                                                        class="fas fa-eye"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p colspan="7">no records found</p>
                    {% endfor %}
                </section>
            </div>
            <div class="col-1">
            </div>
        </div>
        <div class="row">
            <div class="col-5">
            </div>
            <div class="col-2 mb-2">
                <a href="{{ path('article_new') }}"><i class=" my-5 fa fa-plus-circle fa-5x"></i></a>
            </div>
            <div class="col-5">
            </div>
        </div>
    </div>


{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('article') }}
{% endblock %}
