{% extends '_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="page-content container-fluid col-10 col-lg-10 pb-4">
    <h2>Inscription</h2>
    <div class="registerUser row row-cols-1 row-cols-md-2 row-cols-xl-3">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstName, { 'label': 'Prénom' }) }}
        {{ form_row(registrationForm.lastName, { 'label': 'Nom' }) }}
        {{ form_row(registrationForm.phoneNumber, { 'label': 'Téléphone' }) }}
        {{ form_row(registrationForm.address, { 'label': 'Adresse' }) }}
        {{ form_row(registrationForm.country, { 'label': 'Pays' }) }}
        {{ form_row(registrationForm.user.email, { 'label': 'Mail' }) }}
        {{ form_row(registrationForm.user.password, { 'label': 'Mot de passe' }) }}
        {{ form_row(registrationForm.user.agreeTerms, { 'label': 'Conditions d\'utilisation' }) }}

        <button type="submit" class="btn btn-primary">Valider l'inscription</button>
    {{ form_end(registrationForm) }}
    </div>
</section>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register_user') }}
{% endblock %}
